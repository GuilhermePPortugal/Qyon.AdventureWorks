@model IEnumerable<Qyon.AdventureWorks.Models.PistaCorrida>

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro de Pistas</h1>

<p>
   <a asp-action="Create" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Incluir Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
               <a asp-action="Edit" class= "btn  btn-sm btn-primary" asp-route-id="@item.Id_PistaCorrida"  >Editar</a> |
                <a asp-action="Details"class="btn btn-sm btn-warning" asp-route-id="@item.Id_PistaCorrida">Detalhes</a> |
                <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.Id_PistaCorrida">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
