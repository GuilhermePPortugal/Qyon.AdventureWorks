@model Qyon.AdventureWorks.Models.HistoricoCorrida

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>HistoricoCorrida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Id_Competidores" class="control-label"></label>
                <select asp-for="Id_Competidores" class="form-control" asp-items="ViewBag.Id_Competidores"></select>
                <span asp-validation-for="Id_Competidores" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_PistaCorrida" class="control-label"></label>
                <select asp-for="Id_PistaCorrida" class="form-control" asp-items="ViewBag.Id_PistaCorrida"></select>
                <span asp-validation-for="Id_PistaCorrida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCorrida" class="control-label"></label>
                <input asp-for="DataCorrida" class="form-control" />
                <span asp-validation-for="DataCorrida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempoGasto" class="control-label"></label>
                <input asp-for="TempoGasto" class="form-control" />
                <span asp-validation-for="TempoGasto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
                <button type="reset" class="btn btn-danger">Cancelar</button>
                <a asp-action="Index" class="btn btn-primary" role="button" >Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
