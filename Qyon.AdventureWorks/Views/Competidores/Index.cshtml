@model IEnumerable<Qyon.AdventureWorks.Models.Competidores>

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro de Competidores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Incluir Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
           <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TemperaturaMediaCorpo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Altura)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TemperaturaMediaCorpo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Altura)
            </td>
            <td>
                <a asp-action="Edit" class= "btn  btn-sm btn-primary" asp-route-id="@item.Id_Competidores"  >Editar</a> |
                <a asp-action="Details"class="btn btn-sm btn-warning" asp-route-id="@item.Id_Competidores">Detalhes</a> |
                <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.Id_Competidores">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
